<div class = "col-md-4 col-sm-4 col-lg-4 col-xl-4 col-xs-4">
	{% set pages = (count/pagesize)|round(0,'ceil') %}

	{% for i in range(1, pages) %}
		{% if page == i %}
			<strong id="selected-page" data-value="{{i}}">{{ i }}</strong>
		{% else %}
	    	<a class="pagination-page-change" value="{{i}}" data-page="{{pageType}}">{{ i }}</a>
	    {% endif %}
	{% endfor %}
</div>
<div class = "col-md-4 col-sm-4 col-lg-4 col-xl-4 col-xs-4">
	Pagina {{ page }} de {{ pages }} 
</div>
<div class = "col-md-4 col-sm-4 col-lg-4 col-xl-4 col-xs-4">
	<span>Page size: </span>
	{% set pageoptions = [10, 25, 50] %}
	{% for o in pageoptions %}
		{% if o == pagesize %}
			<strong id="selected-page-size" data-value="{{o}}">{{ o }}</strong>
		{% else %}
	    	<a class="pagination-page-size-change" value="{{o}}" data-page="{{pageType}}">{{ o }}</a>
	    {% endif %}
	{% endfor %}
</div>